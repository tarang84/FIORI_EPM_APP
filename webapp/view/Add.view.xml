<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="pcs.hr.payroll.controller.Add">
	<!--<App>-->
	<!--	<pages>-->
			<Page title="Add New Product">
				<content>
				    <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form0">
				        <sap.ui.layout.form:content>
				            <core:Title text="Title" id="__title0"/>
				            <Label text="Product Id" id="__label0"/>
				            <Input width="100%" id="__input0" value="{addN>/productData/PRODUCT_ID}" submit="onSubmit"/>
				            <Label text="Name" id="__label1"/>
				            <Input width="100%" id="__input2" value="{addN>/productData/NAME}"/>
				            <Label text="Description"/>
				            <Input width="100%" value="{addN>/productData/DESCRIPTION}"/>
				            <Label text="Supplier Id"/>
				            <Input width="50%" value="{addN>/productData/SUPPLIER_ID}" showValueHelp="true" valueHelpRequest="onF4S"/>
				            <Label text="Price"/>
				            <Input width="40%" value="{addN>/productData/PRICE}"/>
				            <Input width="30%" value="{addN>/productData/CURRENCY_CODE}"/>
				        </sap.ui.layout.form:content>
				    </sap.ui.layout.form:SimpleForm>
				</content>
			<footer>
			    <Toolbar width="100%" id="__toolbar1">
			        <content>
			            <ToolbarSpacer id="__spacer0"/>
			            <Button text="Save" width="100px" id="__button0" icon="sap-icon://save" press="onSave"/>
			            <Button width="100px" id="__button2" icon="sap-icon://monitor-payments" tooltip="Get Most Expensive One" press="onExpensive"/>
			            <Button width="100px" id="__button1" icon="sap-icon://delete" press="onDelete"/>
			        </content>
			    </Toolbar>
			</footer>
			</Page>
	<!--	</pages>-->
	<!--</App>-->
</mvc:View>